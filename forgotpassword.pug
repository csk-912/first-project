extends base.pug

block style
    style
        include ../static/forgotpasswordstyle.css

block content
    nav#navbar
        ul
            img(src="../static/parkinglogo.jpg", alt="loading LOGO")
            li #[a(href = '/Home') Home]
            li #[a(href = '/Services') Services] 
            li #[a(href = '/AboutUs') About us] 
            li #[a(href = '/ContactUs') Contact us]
            li #[a(href = '/',class = 'logout') log out]
    div.container
        h1 Forgot password page
        form(action="/forgotpassword",method = "post",class = "myform")
            input(type="text",placeholder="Enter your username",name = "username",class = "myinput")
            input(type="email",placeholder="Enter your email",name = "email",class = "myinput")
            input(type="text",placeholder = "Enter your vehicle number",name = "vehiclenumber",class = 'myinput')
            input(type="password",placeholder="Enter new password",name = "password",class = "myinput")
            input(type="password",placeholder="Enter the new password",name = "cnfpassword",class = "myinput")
            //- input(type="text",placeholder="Enter your address",name = "address",class = "myinput")
            button.btn
                |submit